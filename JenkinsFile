pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage('test'){
            steps{
                sh '''
                    echo "test stage"
                    test -e /Users/mustafakaanisimbay/learn-jenkins/learn-jenkins-app/build/index.html
                '''
            }
        }
    }
}
