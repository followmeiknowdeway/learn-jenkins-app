pipeline {
    agent any
    
    environment{
        AWS_DEFAULT_REGION = 'eu-north-1'
    }
    stages {


        stage('Build') {
            agent{
                docker {
                    image 'my-playwright'
                    reuseNode true
                }
            }           

            
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        
        }

        stage('AWS CLI'){
            agent{
                docker{
                    image 'amazon/aws-cli:latest'
                    args "--entrypoint=''"
                    reuseNode true
                }
            }
            environment{
                AWS_S3_BUCKET = 'learn-jenkins-202519032331'
            }
            
            steps{
                withCredentials([usernamePassword(credentialsId: 'aws-s3', passwordVariable: 'AWS_SECRET_ACCESS_KEY', usernameVariable: 'AWS_ACCESS_KEY_ID')]) {
                    sh '''
                        aws --version
                        sudo yum install jq -y
                        LATEST=$(aws ecs register-task-definition --cli-input-json file://aws/task.json | jq '.taskDefinition.revision')
                        aws ecs update-service --cluster learn --service ax --task-definition $LATEST
                        

                        
                    '''
                }                
            }
        }
   

    }

    
}
